#: import environ os.environ
#: import gch kivy.utils.get_color_from_hex
#: import NavigationItem decentra_network_deprem.gui_lib.libs.baseclass.tabnavigation.NavigationItem
#: import NavigationBar decentra_network_deprem.gui_lib.libs.baseclass.tabnavigation.NavigationBar

#: import AlertScreen decentra_network_deprem.gui_lib.libs.baseclass.alert_screen.AlertScreen
#: import LocationScreen decentra_network_deprem.gui_lib.libs.baseclass.location_screen.LocationScreen


<DecentraRootScreen>

    MDBoxLayout:
        orientation: 'vertical'

        NavigationBar:
            id: nav_bar

            NavigationItem:
                text: "ALARM"
                icon: "home-alert-outline"
                on_release:
                    scr_manager.transition.direction = "right"
                    scr_manager.current = "ALARM"



            NavigationItem:
                text: "LOKASYON"
                icon: "crosshairs-gps"
                on_release:
                    scr_manager.transition.direction = "left"
                    scr_manager.current = "LOKASYON"

        ScreenManager:
            id: scr_manager

            AlertScreen:
                name: "ALARM"



            LocationScreen:
                name: "LOKASYON"


<ScrollView>
    bar_width: 0


<DecentraLabel@MDLabel>
    adaptive_height: True


<DecentraListItem>
    size_hint_y: None
    height: dp(60)

    canvas:
        Color:
            rgba:
                self.theme_cls.divider_color
        Line:
            points: (root.x+dp(16), root.y, root.x+self.width-dp(16)-0, root.y)
    canvas.before:

        Rectangle:
            size: self.size
            pos: self.pos

    MDBoxLayout:
        adaptive_size: True
        padding: dp(15)
        pos_hint: {"center_x": .5, "center_y": .5}

        MDIcon:
            icon: "minus-thick"
            halign: "center"
            pos_hint: {"center_y": .5}
            theme_text_color: "Custom"
            text_color: root.bar_color

            canvas.before:
                PushMatrix
                Rotate:
                    angle: 90
                    origin: self.center
            canvas.after:
                PopMatrix

    MDBoxLayout:
        orientation: 'vertical'
        adaptive_height: True
        pos_hint: {"center_x": .5, "center_y": .5}
        spacing: dp(2)

        DecentraLabel:
            text: root.text
            font_style: "Subtitle1"

        DecentraLabel:
            text: root.secondary_text
            theme_text_color: "Hint"
            font_style: "Button"

    MDBoxLayout:
        orientation: 'vertical'
        padding: (0, 0, 0, dp(10))
        adaptive_height: True

        DecentraLabel:
            text: root.tertiary_text
            theme_text_color: "Secondary"
            pos_hint: {"center_x": .5, "center_y": .5}
            halign: "right"
            font_style: "H3"
            font_size: sp(20)

    MDBoxLayout:
        adaptive_size: True
        padding: dp(15)
        pos_hint: {"center_x": .5, "center_y": .5}

        MDIcon:
            icon: "chevron-right"
            halign: "center"
            pos_hint: {"center_y": .5}
            theme_text_color: "Hint"
