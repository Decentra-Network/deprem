#: import gch kivy.utils.get_color_from_hex


<AlertScreen>

    ScrollView:

        MDList:
            spacing: dp(10)

            AlertBox:
                text : "Balance"



<Create_Alert_Box>
    adaptive_height: True
    height:"120dp"
    padding: dp(24)



    MDGridLayout:
        adaptive_height: True


        cols: 2


        MDTextField:
            password: True
            size_hint_x: .5
            hint_text: "Password: "
            mode: "fill"

<AlertBox>
    adaptive_height: True



    canvas.before:

        Rectangle:
            size: self.size
            pos: self.pos



    MDGridLayout:
        size_hint_x: 1
        size_hint_y: None
        height: self.minimum_height
        padding: dp(10)
        cols:2
        spacing: 10


        AnchorLayout:
            size_hint_y: None
            height: but2.height
            MDRoundFlatIconButton:
                id: but2
                icon: "home-alert-outline"
                on_press: root.Alert_Create()
                text_color: 1, 0, 0, 1
                text: "DEPREM OLDU"
                halign: "right"
                font_style: "Button"


        AnchorLayout:
            size_hint_y: None
            height: but2.height
            MDRoundFlatIconButton:
                id: but2
                icon: "lastpass"
                on_press: root.set_pass()
                text: "ŞİFRE AYARLA"
                halign: "right"
                font_style: "Button"