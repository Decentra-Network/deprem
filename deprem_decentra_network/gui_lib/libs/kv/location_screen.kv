#: import gch kivy.utils.get_color_from_hex


<LocationScreen>

    ScrollView:

        MDList:
            spacing: dp(10)

            LocationBox

<LocationBox>
    adaptive_height: True



    canvas.before:

        Rectangle:
            size: self.size
            pos: self.pos



    MDGridLayout:
        size_hint_x: 1
        size_hint_y: None
        height: self.minimum_height
        padding: dp(10)
        cols:2
        spacing: 10


        AnchorLayout:
            size_hint_y: None
            height: but3.height
            MDRoundFlatIconButton:
                id: but3
                icon: "arrow-down-drop-circle-outline"
                on_press: root.show_example_list_bottom_sheet()
                text: root.text
                halign: "right"
                font_style: "Button"



